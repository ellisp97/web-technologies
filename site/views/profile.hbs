<div id = "right-bar">
    <div class="card">
        <h1>Profile</h1>
        <p class="username">{{username}} : {{userid}} </p>
        <p class = "email">{{email}}</p>
        <p>University of Bristol</p>
    </div>
    <div class="card">
        <h1>Tracking Info</h1>
        <h2>Products Tracked = {{watched_lengths}}</h2>
        {{!-- <h1>Saving Made : </h1> --}}
        <h2>Total Current Price = {{watched_currency}}{{watched_prices}} </h2>
        <h2>Total Current Savings = {{watched_currency}}{{total_saving}} </h2>
        <h2>Biggest Saving = {{product_max_saving}}: {{watched_currency}}{{max_saving}}</h2>
    </div>
</div>

<div id="left-bar">
    <div class="dropdown">
        <div id="wrapdown">
            <button class="dropbtn" id="dropdown-button">Select from the dropdown to display other graphs (up to 5 will be shown)</button>
            <div id="dropdown_container" class="dropdown-content"></div>
        </div>
    </div>

    <div class="displayChart">
        <canvas id="myChart"></canvas>
        <div id="choose_options">
            <select id="choose-number" name="select-number"></select>
            <select id="choose-timescale" name="select-timescale">
            <option value="Days" selected="selected">Days</option>
            <option value="Weeks">Weeks</option>
            <option value="Months">Months</option>
            </select>
        </div>
        <button type="button" name="redraw" id="redraw_button">Redraw</button>
    </div>
</div>


