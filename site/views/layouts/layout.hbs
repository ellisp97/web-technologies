<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Price Tracker</title>
                <link rel="stylesheet" href ="/stylesheets/404.css">

        <link rel="stylesheet" href ="/stylesheets/profile.css">
        <link rel="stylesheet" href ="/stylesheets/style.css">
        <link rel="stylesheet" href ="/stylesheets/loggedin.css">
        <script src="/javascripts/loadcolor.js" ></script>
        <script src="/javascripts/carousel.js" ></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>

        {{!-- just default style for now buttons will be created and inserted into form --}}
    
    </head>
     <body >{{!--onload="random_col()" --}}
        <div class="intro-form">
            {{#if isAuthenticated}}
                <ul class="main-menu">
                    <li><a href="/profile"><i class="fa fa-user"></i>Profile</a></li>
                    <li><a href="/login"> <i class="fas fa-home"></i>Home</a></li>
                    <li><a onclick="document.getElementById('sell').style.display='block'"> <i class="fa fa-shopping-bag"></i>Sell</a></li>
                    <li><a href="/logout"> <i class="fa fa-sign-out"></i>Logout</a></li>

                    {{!-- <button class ="btn1" onclick="location.href='/profile'" type="button" ><span class="text">Profile</span> <i class="fas fa-user"></i></button>
                    <button class ="btn2" onclick="location.href='/login'" type="button">Home <i class="fas fa-sign-in"></i></button>
                    <button class ="btn3" onclick="document.getElementById('sell').style.display='block'" >Sell <i class="fas fa-shopping-nag"></i></button>
                    <button class ="btn4" onclick="location.href='/logout'" type="button" >Logout <i class="fas fa-sign-out"></i></button> --}}
                </ul>
            {{else}}
                <ul class="main-menu">
                    <li><a onclick="document.getElementById('login').style.display='block'"> <i class="fa fa-user"></i>Login</a></li>
                    <li><a onclick="document.getElementById('register').style.display='block'"> <i class="fa fa-user"></i>Register</a></li>
                </ul>
            
            {{/if}}
        </div>


        <form action="/login" method="post">
            <div id="login" class="modal">
                <span onclick="document.getElementById('login').style.display='none'" class="close" title="Close Modal">×</span>
                <div class="modal-content animate">
                    <div class="container">
                        <img src="images/logo.svg" alt="loginpic" />
                        <div class="form-input">
                            <input type="text" id="username" name="username" placeholder="username" />
                            <input type="password" id="password" name="password" placeholder="password" />
                        </div>
                        <div class="loginbutt">
                            <button type="submit">Login</button>
                            <button type="button" onclick="document.getElementById('login').style.display='none'" class="cancelbutt">Cancel</button>
                            <span class="pass">Forgot
                                <a href="#">password?</a>
                            </span>
                            {{# if success }}
                            <section class="success">
                                <h2>Successful Validation!</h2>
                            </section>
                            {{ else }} {{# if errors }}
                            
                            <!--section class="errors">
                                        <ul>
                                            {{# each errors }}
                                                <li>{{ this.msg }}</li>
                                            {{/each}}
                                        </ul>
                                    </section-->
                            {{/if}} {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <form action="/sumbit" method="post">
            <div id="register" class="modal">
                <span onclick="document.getElementById('register').style.display='none'" class="close" title="Close Modal">×</span>
                <div class="modal-content animate">
                    <div class="container">
                        <div class="register-form">
                            <h1>Register User</h1>
                            <input type="text" id="name" name="name" placeholder="put name here" />
                            <label for="username">
                                <input type="text" id="usernameR" name = "usernameR" placeholder="Username" minlength="3" required>
                                <ul class="input-requirements">
                                    <li>At least 3 characters long</li>
                                    <li>Must only contain letters and numbers (no special characters)</li>
                                </ul>
                            </label>
                            <input type="email" id="email" name="email" placeholder="email here" />
                            <label for="password">
                                <input type="password" id="passwordR" name="passwordR" placeholder="password here" maxlength="100" minlength="8" required>

                                <ul class="input-requirements">
                                    <li>Between 8 and 100 characters </li>
                                    <li>Contain at least 1 number</li>
                                    <li>Contains at least 1 lowercase letter</li>
                                    <li>Contains at least 1 uppercase letter</li>
                                    <li>Contains a special character (!$%@)</li>
                                </ul>
                            </label>
                            <label for="password_repeat">
                                <input type="password" id="password_repeat" placeholder="confirm password" maxlength="100" minlength="8" required>
                            </label>
                        </div>

                        <div class="submitbutt">
                            <input type="submit" value="Submit">

                            <button type="button" onclick="document.getElementById('login').style.display='none'" class="cancelbutt">Cancel</button>

                            {{# if success }}
                            <section class="success">
                                <h2>Successful Validation!</h2>
                            </section>
                            {{ else }} {{# if errors }}
                            <section class="errors">
                                <ul>
                                    {{# each errors }}
                                    <li>{{ this.msg }}</li>
                                    {{/each}}
                                </ul>
                            </section>
                            {{/if}} {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <script src="/javascripts/check.js"></script>

        {{{ body }}}
    </body>
</html>
