<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Price Tracker</title>
        <link rel="stylesheet" href ="/stylesheets/profile.css">
        <link rel="stylesheet" href ="/stylesheets/style.css">
        <link rel="stylesheet" href ="/stylesheets/loggedin.css">
        <script src="/javascripts/loadcolor.js" ></script>
        <script src="/javascripts/carousel.js" ></script>
        {{!-- just default style for now buttons will be created and inserted into form --}}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    </head>
    <body onload="random_col()">
         <div class="intro-form">
            {{#if isAuthenticated}}
                <button class ="btn" onclick="location.href='/profile'" style="background-color:#f25" type="button" >Profile <i class="fa fa-bars"></i></button-->
                <button onclick="location.href='/login'" style="background-color:#eccc68" type="button">Home <i class="fa fa-home"></i></button>
                <button onclick="document.getElementById('sell').style.display='block'" style="background-color:#ffa502" >Sell <i class="fa fa-folder"></i></button>
                <button onclick="location.href='/logout'" style="background-color:#ff6b81" type="button" >Logout <i class="fa fa-close"></i></button-->
            {{else}}
                <button onclick="document.getElementById('login').style.display='block'" style="background-color:#ff6b81" >Login Form<i class="fa fa-home"></i></button>
                <button onclick="document.getElementById('register').style.display='block'" style="background-color:#ff7f50">Register <i class="fa fa-trash"></i></button>
            {{/if}}
        </div>
        
        {{{ body }}}
    </body>
</html>
