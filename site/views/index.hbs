                    <img src="images/ping.jpg" alt="loginpic"/>
                    <div class="form-input">
                        <input type="text" id = "username" name="username" placeholder="get your pingerz here" id = "product"/>
                        <input type="price" id = "password" name="password" placeholder="5 for 20" id = "price"/>
